{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "rootDir": "src",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "__test__"]
}